<main>
	<h2>Handmade, Fresh, Daily!</h2>

		{{#each donuts}}

			<div class="donut-container">

				<img src="{{this.img}}" alt="picture of {{this.name}}">

				<h3>   <a href="/{{this._id}}">{{this.name}}</a>  </h3>

				<p>$ {{this.price}} each </p>

				{{#if this.qty}}

				{{else}}

					Out of Stock

				{{/if}}

			</div>

		{{/each}}
		<div class="donut-container">
			<h3> <a href="/new">Make your own!</a> </h3>
		</div>
</main>
